{
	"name": "merner_auth",
	"version": "1.0.0",
	"type": "module",
	"description": "User Authentication skeleton for websites, created using MongoDB, Express, React, Node & Redux (MERNER)",
	"main": "index.js",
	"scripts": {
		"server": "nodemon backend/server",
		"client": "npm start --prefix frontend",
		"start": "concurrently \"npm run server\" \"npm run client\"",
		"data:import": "node backend/data/seeder",
		"data:destroy": "node backend/data/seeder -d"
	},
	"keywords": [
		"User Authentication",
		"MongoDB",
		"Express",
		"React",
		"Node",
		"Redux"
	],
	"author": "Raihan Shezan",
	"license": "MIT",
	"dependencies": {
		"@sendgrid/mail": "^7.6.0",
		"bcryptjs": "^2.4.3",
		"express": "^4.17.1",
		"google-auth-library": "^7.10.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.13"
	},
	"devDependencies": {
		"concurrently": "^6.4.0",
		"dotenv": "^10.0.0",
		"morgan": "^1.10.0",
		"nodemon": "^2.0.15"
	}
}
